{
    "manifest_version": 3,
    "name": "Screen Reader Description",
    "description": "Provides screen reader-based audio descriptions for select videos on various streaming sites.",
    "version": "0.4",
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": ["<all_urls>"],
    "options_page": "options.html",
    "content_scripts": [
        {
            "js": ["editor_bridge.js"],
            "matches": [
                "http://localhost:5173/",
                "https://www.screenreaderdescription.com/editor.html"
            ]
        },
        {
            "js": ["crunchyroll.js"],
            "matches": ["https://*.crunchyroll.com/*"],
            "all_frames": true
        },
        {
            "js": ["youtube.js"],
            "matches": ["https://*.youtube.com/*"]
        },
        {
            "js": ["hidive.js"],
            "matches": ["https://*.hidive.com/video/*"]
        }
    ]
}